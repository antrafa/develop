<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="consumo_carne"
        android:title="@string/consumo_de_carne"
        android:defaultValue="300"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:digits="0123456789"
        android:maxLines="1" />

    <EditTextPreference
        android:key="consumo_linguica"
        android:title="@string/consumo_de_linguica"
        android:defaultValue="2"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:digits="0123456789"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="consumo_refri"
        android:title="@string/consumo_de_refrigerante"
        android:defaultValue="250"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:digits="0123456789"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
